@model List<TorneioTenisMesa.Models.ViewModels.GameResultViewModel>

@{
    ViewData["Title"] = "Results";
}

<h2>Match Results</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Oponnent</th>
                <th>My Score</th>
                <th>Opponent Score</th>
                <th>Group</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.Player2Name</td> <!-- Exibindo o nome do adversÃ¡rio -->
                    <td>@result.ScorePlayer1</td> <!-- Exibindo o placar do jogador 1 -->
                    <td>@result.ScorePlayer2</td> <!-- Exibindo o placar do jogador 2 -->
                    <td>@result.Group</td> <!-- Exibindo o grupo -->
                    <td>@result.Date.ToString("dd/MM/yyyy")</td> <!-- Exibindo a data -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No matches registered yet.</p>
}
