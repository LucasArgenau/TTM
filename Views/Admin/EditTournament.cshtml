@model TorneioTenisMesa.Models.ViewModels.TournamentViewModel
@{
    ViewData["Title"] = "Editar Torneio";
    var jogadores = Model.Players.OrderBy(p => p.Name).ToList();
    var jogos = Model.Games;
}

<div class="container">
    <h2 class="text-center mb-4">@Model.TournamentName - Edição de Resultados</h2>

    <form asp-action="EditTournament" method="post">
        <input type="hidden" name="TournamentId" value="@Model.TournamentId" />

        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>Jogador</th>
                        @foreach (var col in jogadores)
                        {
                            <th>@col.Name</th>
                        }
                        <th>Vitórias</th> <!-- Coluna adicional para mostrar vitórias -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in jogadores)
                    {
                        <tr>
                            <th class="align-middle">@row.Name</th>
                            @foreach (var col in jogadores)
                            {
                                if (row.Id == col.Id)
                                {
                                    <td class="bg-light">–</td>
                                }
                                else
                                {
                                    var jogo = jogos.FirstOrDefault(g =>
                                        (g.Player1Id == row.Id && g.Player2Id == col.Id) ||
                                        (g.Player1Id == col.Id && g.Player2Id == row.Id));

                                    if (jogo != null)
                                    {
                                        var idPart = $"{row.Id}_{col.Id}";

                                        <td class="p-1">
                                            <div class="d-flex flex-column">
                                                <input type="hidden" name="Games[@idPart].Player1Id" value="@row.Id" />
                                                <input type="hidden" name="Games[@idPart].Player2Id" value="@col.Id" />
                                                <input type="number" name="Games[@idPart].ScorePlayer1" 
                                                       value="@jogo.ScorePlayer1" 
                                                       class="form-control form-control-sm mb-1" 
                                                       min="0" max="3" />
                                                <input type="number" name="Games[@idPart].ScorePlayer2" 
                                                       value="@jogo.ScorePlayer2" 
                                                       class="form-control form-control-sm" 
                                                       min="0" max="3" />
                                            </div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-muted">–</td>
                                    }
                                }
                            }
                            <td class="align-middle">
                                @jogos.Count(g => (g.Player1Id == row.Id && g.ScorePlayer1 > g.ScorePlayer2) || 
                                 (g.Player2Id == row.Id && g.ScorePlayer2 > g.ScorePlayer1))
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg">Salvar Alterações</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Voltar</a>
        </div>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3 text-center">
            @TempData["SuccessMessage"]
        </div>
    }
</div>

<style>
    th {
        white-space: nowrap;
        position: sticky;
        left: 0;
        background-color: white;
        z-index: 1;
    }
    
    .table-responsive {
        overflow-x: auto;
        max-height: 80vh;
    }
    
    .form-control-sm {
        max-width: 70px;
        margin: 0 auto;
    }
</style>