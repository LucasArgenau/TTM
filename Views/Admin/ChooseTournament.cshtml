@model List<TorneioTenisMesa.Models.Tournament>

<h2>Selecione o Torneio</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">Nenhum torneio encontrado.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome do Torneio</th>
                <th>Admin</th>
                <th>Data de Início</th>
                <th>Data de Término</th>
                <th>Detalhes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tournament in Model)
            {
                <tr>
                    <td>@tournament.Name</td>
                    <td>@(tournament.AdminUser != null ? tournament.AdminUser.UserName : "N/A")</td> <!-- Verifica se existe Admin -->
                    <td>@tournament.StartDate.ToShortDateString()</td>
                    <td>@tournament.EndDate.ToShortDateString()</td>
                    <td>
                        <!-- Link para gerenciar resultados, agora no AdminController -->
                        <a href="@Url.Action("ManageResults", "Admin", new { id = tournament.Id })" class="btn btn-primary">Gerenciar Resultados</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
