@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TorneioTenisMesa.Models.ViewModels.ImportCsvViewModel

@{
    ViewData["Title"] = "Importar Jogadores";
}

@* CSS para a estilização do formulário *@
<style>
    .form-container {
        margin-top: 50px;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-custom {
        background-color: #0056b3;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-custom:hover {
        background-color: #003f7f;
    }

    .alert {
        margin-top: 20px;
    }
</style>

<div class="form-container">
    <h2>Importar Jogadores</h2>

    @* Exibir mensagens de sucesso ou erro *@
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            @Model.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }

    <form asp-action="ImportCsv" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="Description">Descrição da Importação</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CsvFile">Arquivo CSV</label>
            <input type="file" asp-for="CsvFile" class="form-control" accept=".csv" />
            <span asp-validation-for="CsvFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-custom">Importar</button>
    </form>

    @* Se a importação for bem-sucedida, exibir a lista de jogadores importados *@
    @if (Model.Players != null && Model.Players.Any())
    {
        <h3>Jogadores Importados</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Grupo</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var player in Model.Players)
                {
                    <tr>
                        <td>@player.Id</td>
                        <td>@player.Name</td>
                        <td>@player.Group</td>
                        <td>
                            <a href="@Url.Action("EditPlayer", "Admin", new { id = player.Id })" class="btn btn-sm btn-warning">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
