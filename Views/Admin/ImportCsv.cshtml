@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TorneioTenisMesa.Models.ViewModels.ImportCsvViewModel

@{
    ViewData["Title"] = "Importar Jogadores";
}

<style>
    .form-container {
        margin-top: 50px;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-custom {
        background-color: #0056b3;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-custom:hover {
        background-color: #003f7f;
    }

    .alert {
        margin-top: 20px;
    }

    .btn-group {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }
</style>

<div class="form-container">
    <div class="d-flex align-items-center gap-2">
    <h2>Importar Jogadores</h2>
    <a asp-action="Index" class="btn btn-primary ms-auto">
        Back
    </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            @Model.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="ImportCsv" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="TournamentId" />

        <div class="form-group">
            <label for="CsvFile">Arquivo CSV</label>
            <input type="file" asp-for="CsvFile" class="form-control" accept=".csv" />
            <span asp-validation-for="CsvFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-custom">Importar</button>
    </form>

    @if (Model.Players != null && Model.Players.Any())
    {
        <h3>Jogadores Importados</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Grupo</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var player in Model.Players)
                {
                    <tr>
                        <td>@player.Id</td>
                        <td>@player.Name</td>
                        <td>@player.Group</td>
                        <td>
                            <a href="@Url.Action("EditPlayer", "Admin", new { id = player.Id })" class="btn btn-sm btn-warning">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="btn-group">
            <!-- Botão para gerar confrontos (já existia) -->
            <form asp-action="GenerateGames" method="post">
                <input type="hidden" name="tournamentId" value="@Model.TournamentId" />
                <button type="submit" class="btn btn-success">Próximo: Gerar Confrontos</button>
            </form>

            <!-- Novo botão: adicionar resultados -->
            <form asp-action="ManageResults" method="get">
                <input type="hidden" name="tournamentId" value="@Model.TournamentId" />
                <button type="submit" class="btn btn-primary">Adicionar Resultados</button>
            </form>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
