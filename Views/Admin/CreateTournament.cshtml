@model TorneioTenisMesa.Models.ViewModels.CreateTournamentViewModel

@{
    ViewData["Title"] = "New Tournament";
}

<h2>@ViewData["Title"]</h2>

<div class="card p-4 mt-3">
    <form asp-action="CreateTournament" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" class="form-control" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Import Players</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
