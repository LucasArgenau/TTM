@model IEnumerable<TorneioTenisMesa.Models.Tournament>

@{
    ViewData["Title"] = "Gerenciar Torneios";
}

<h2>@ViewData["Title"]</h2>

<a class="btn btn-primary mb-3" asp-action="CreateTournament">+ Criar Novo Torneio</a>

@if (!Model.Any())
{
    <div class="alert alert-info">Nenhum torneio cadastrado.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Início</th>
                <th>Término</th>
                <th>Importação</th>
                <th>Jogadores</th>
                <th>Partidas</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Name</td>
                    <td>@t.StartDate.ToShortDateString()</td>
                    <td>@t.EndDate.ToShortDateString()</td>
                    <td>Batch #@t.ImportBatchId</td>
                    <td>@t.Players.Count</td>
                    <td>@t.Games.Count</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="TournamentDetails" asp-route-id="@t.Id">Detalhes</a>
                        <a class="btn btn-warning btn-sm" asp-action="EditTournament" asp-route-id="@t.Id">Editar</a>
                        <form asp-action="DeleteTournament" asp-route-id="@t.Id" method="post" style="display:inline" onsubmit="return confirm('Deseja realmente excluir este torneio?');">
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
