@model TorneioTenisMesa.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="text-2xl font-bold text-blue-900 mb-6">@ViewData["Title"]</h2>

<form asp-action="EditUser" method="post" class="bg-white p-6 rounded shadow-md max-w-md mx-auto" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="mb-5">
        <label asp-for="UserName" class="block text-blue-800 font-semibold mb-1">Users Name</label>
        <input asp-for="UserName" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="UserName" class="text-red-600 text-sm mt-1 block"></span>
    </div>

    <div class="flex items-center gap-4">
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-black font-semibold px-5 py-2 rounded transition">
        Save
    </button>

    <a asp-action="Users" class="bg-blue-600 hover:bg-blue-700 text-black font-semibold px-5 py-2 rounded transition no-underline">
        Back
    </a>
</div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
