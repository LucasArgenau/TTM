@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Home";
    var user = HttpContextAccessor.HttpContext?.User;
    var isAdmin = user?.Identity?.IsAuthenticated == true && user.IsInRole("Admin");

    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Table Tennis Tournament</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding-top: 56px;
            background-color: #f0f2f5;
            color: #333;
        }

        .custom-navbar {
            background-color: #004d99 !important;
        }
        .custom-navbar .navbar-brand,
        .custom-navbar .nav-link {
            color: white !important;
        }
        .custom-navbar .nav-link:hover {
            color: #add8e6 !important;
        }

        .hero-section {
            position: relative;
            width: 100%;
            height: calc(100vh - 56px);
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            padding-left: 5%;
            box-sizing: border-box;
        }

        .hero-background-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }

        .hero-content {
            z-index: 1;
            padding: 20px 0;
            max-width: 600px;
            text-align: left;
        }

        .hero-content h1 {
            font-size: 3.5em;
            margin-bottom: 10px;
        }

        .hero-content p {
            font-size: 1.5em;
            line-height: 1.4;
            margin-bottom: 20px;
        }
        
        .btn-hero-login {
            background-color: #007bff;
            color: white;
            padding: 12px 25px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1.1em;
            transition: background-color 0.3s ease;
            z-index: 1;
            margin-left: 5%;
            align-self: flex-start;
            margin-bottom: 20px;
        }

        .btn-hero-login:hover {
            background-color: #0056b3;
            color: white;
        }

        .main-footer {
            background-color: #7f8b97;
            color: white;
            padding: 40px 0;
            margin-top: 0; 
        }

        .footer-section {
            padding: 0 15px; /* Manter este padding base */
            margin-bottom: 20px;
            text-align: center;
            /* NOVO: Adiciona padding horizontal extra para simular mais "espaço" */
            padding-left: 30px; /* Ajuste conforme necessário */
            padding-right: 30px; /* Ajuste conforme necessário */
        }

        .footer-section h5 {
            color: #add8e6;
            margin-bottom: 15px;
        }

        .footer-section p, .footer-section ul {
            font-size: 0.9em;
            line-height: 1.6;
        }

        .footer-section ul {
            list-style: none;
            padding: 0;
        }

        .footer-section ul li a {
            color: white;
            text-decoration: none;
        }

        .footer-section ul li a:hover {
            color: #add8e6;
        }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 20px;
            margin-top: 30px;
            text-align: center;
            font-size: 0.8em;
            color: rgba(255, 255, 255, 0.7);
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark custom-navbar border-bottom shadow-sm fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Table Tennis Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#about-us-section">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#our-mission-section">Our Mission</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact-section">Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="hero-section">
        <img src="/images/tenis-de-mesa-og.webp" alt="Table Tennis" class="hero-background-image">
        <div class="hero-content">
            <h1>Welcome to the Table Tennis Tournament System</h1>
            <p>Manage tournaments, players, and rankings easily and efficiently.</p>
        </div>
        @if (user?.Identity?.IsAuthenticated != true)
        {
            
            <a href="/Account/Login" class="btn-hero-login" role="button">
                LOGIN
            </a>
        }
    </div>

    <footer class="main-footer">
        <div class="container">
            <div class="row"> 
                <div class="col-md-4 footer-section" id="about-us-section">
                    <h5>About Us</h5>
                    <p>We are a passionate team dedicated to enhancing the table tennis experience. Our platform provides intuitive tools for managing tournaments, tracking player performance, and fostering a vibrant community for enthusiasts worldwide. Join us in elevating the sport!</p>
                </div>
                <div class="col-md-4 footer-section" id="our-mission-section">
                    <h5>Our Mission</h5>
                    <p>Our mission is to simplify tournament organization and promote table tennis globally. We strive to empower players, organizers, and fans with innovative technology, making the sport more accessible, competitive, and enjoyable for everyone.</p>
                </div>
                <div class="col-md-4 footer-section" id="contact-section">
                    <h5>Contact Us</h5>
                    <p>Email: TableTenisManager.com</p>
                    <p>Phone: +55 17 99456-7890</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12 footer-bottom">
                    <p>&copy; @DateTime.Now.Year Table Tennis Tournament System. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();

                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>

</body>
</html>