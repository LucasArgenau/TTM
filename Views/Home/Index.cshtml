@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Home Page";
    var user = HttpContextAccessor.HttpContext?.User; 
    var isAdmin = user?.Identity?.IsAuthenticated == true && user.IsInRole("Admin");
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body style="background-color: #f1f8ff;">
    <!-- Cabeçalho -->
    <header class="navbar navbar-expand-lg navbar-dark" style="background-color: #003366;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Torneios de Tênis de Mesa</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    @if (user?.Identity?.IsAuthenticated != true)  
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Login</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link disabled">Bem-vindo, @user?.Identity?.Name</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </header>

    <!-- Corpo da Página -->
    <div class="container text-center py-5">
        <h1 class="display-4" style="color: #003366;">Bem-vindo ao Sistema de Torneios de Tênis de Mesa</h1>
        <p class="lead" style="color: #0066cc;">Gerencie torneios, jogadores e rankings de forma fácil e eficiente.</p>
        <img src="~/images/tenis-de-mesa.jpg" alt="Tênis de Mesa" class="img-fluid rounded-3 my-4" style="max-width: 80%;">
        <p style="color: #003366;">Nosso sistema foi desenvolvido para organizar campeonatos de tênis de mesa de forma rápida e intuitiva. Torneios, jogos, rankings, tudo na palma da sua mão!</p>

        @if (user?.Identity?.IsAuthenticated != true)
        {
            <a href="/Account/Login" class="btn btn-primary btn-lg" role="button" style="background-color: #0066cc; border-color: #003366;">Entrar</a>
        }
        else if (isAdmin)
        {
            <a href="/Admin/ImportCsv" class="btn btn-success btn-lg mt-3" role="button">Importar Jogadores via CSV</a>
        }
    </div>

    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2025 Torneios de Tênis de Mesa. Todos os direitos reservados.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
